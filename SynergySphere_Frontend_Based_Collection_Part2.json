          "raw": "{{baseUrl}}/projects/{{projectId}}",
          "host": ["{{baseUrl}}"],
          "path": ["projects", "{{projectId}}"]
        },
        "description": "Delete project"
      }
    },
    {
      "name": "Add Project Member",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "Content-Type",
